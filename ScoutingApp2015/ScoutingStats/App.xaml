<Application x:Class="ScoutingStats.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:e="http://schemas.codeplex.com/elysium"
						 xmlns:par="http://schemas.codeplex.com/elysium/params"
						 StartupUri="MainWindow.xaml">
  <Application.Resources>
		<Style x:Key="DialogStyle"
					 TargetType="e:Window">
			<Setter Property="par:Design.AccentBrush"
							Value="{x:Static e:AccentBrushes.Green}" />
			<Setter Property="par:Manager.AccentBrush"
							Value="{x:Static e:AccentBrushes.Green}" />
			<Setter Property="ShowInTaskbar"
							Value="False" />
			<Setter Property="Topmost"
							Value="True" />
		</Style>
  </Application.Resources>
</Application>
