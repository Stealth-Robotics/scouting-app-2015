<e:Window x:Class="ScoutingApp.PenaltyOverlay"
					xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:e="http://schemas.codeplex.com/elysium"
					xmlns:par="http://schemas.codeplex.com/elysium/params"
					xmlns:ex="http://schemas.extra.com/ui"
					Style="{DynamicResource LightOverlay}"
					Title="Add Penalty"
					Width="600"
					Height="128"
					ResizeMode="NoResize"
					ShowInTaskbar="False"
					SizeToContent="Height"
					WindowStartupLocation="CenterOwner">
	<StackPanel Orientation="Vertical" 
							HorizontalAlignment="Center">
		<StackPanel Orientation="Horizontal"
								HorizontalAlignment="Center"
								Margin="0,5,0,10">
			<TextBlock Text="Reasoning: "
								 FontSize="14"
								 FontWeight="SemiBold"
								 VerticalAlignment="Center"
								 HorizontalAlignment="Right" />
			<TextBox x:Name="ReasonBox"
							 Width="300"
							 FontSize="14"
							 BorderThickness="1"
							 TextChanged="ReasonBox_TextChanged" />
		</StackPanel>
		<StackPanel Orientation="Horizontal"
								HorizontalAlignment="Center"
								Margin="0,0,0,10">
			<Button x:Name="OKBtn"
							Content="OK"
							Width="96"
							FontSize="14"
							Click="OKBtn_Click" />
			<Button x:Name="CancelBtn"
							Content="Cancel"
							Width="96"
							FontSize="14"
							Margin="5,0,0,0"
							Click="CancelBtn_Click" />
		</StackPanel>
	</StackPanel>
</e:Window>
