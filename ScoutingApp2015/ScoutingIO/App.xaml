<Application x:Class="ScoutingIO.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:e="http://schemas.codeplex.com/elysium"
						 xmlns:par="http://schemas.codeplex.com/elysium/params"
						 xmlns:ex="http://schemas.extra.com/ui"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
		<Style x:Key="DialogWindow"
					 TargetType="e:Window">
			<Setter Property="par:Design.AccentBrush"
							Value="{x:Static e:AccentBrushes.Purple}" />
			<Setter Property="par:Manager.AccentBrush"
							Value="{x:Static e:AccentBrushes.Purple}" />
			<Setter Property="par:Design.Theme"
							Value="Light" />
			<Setter Property="par:Manager.Theme"
							Value="Light" />
			<Setter Property="ShowInTaskbar"
							Value="False" />
			<Setter Property="Topmost"
							Value="True" />
			<Setter Property="SizeToContent"
							Value="WidthAndHeight" />
			<Setter Property="ResizeMode"
							Value="NoResize" />
		</Style>
  </Application.Resources>
</Application>
